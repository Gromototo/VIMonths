{
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": ".pylintrc",

    "[python]": {
      "editor.defaultFormatter": "ms-python.autopep8",
      "editor.formatOnSave": true
    },

    "autopep8.args": [
      "--aggressive",
      "--aggressive",
      "--max-line-length=80",
      "--indent-size=4",
      "--indent-legacy-tabs",
      "--experimental",
      "--allow-multiline-lambdas",
      "--keep-blank-lines=2",
      "--keep-consecutive-adds",
      "--keep-function-first-line",
      "--no-keep-direct-eol",
      "--no-keep-indents",
      "--no-keep-previous",
      "--no-preserve-parentheses",
      "--no-remove-consecutive-blank-lines",
      "--no-remove-extra-statements",
      "--no-remove-surrounding-whitespace",
      "--no-space-after-anonymous-function",
      "--no-space-after-comma",
      "--no-space-after-semi",
      "--no-space-before-anonymous-function",
      "--no-space-before-comma",
      "--no-space-before-semi",
      "--no-space-between-conditional-parens",
      "--no-space-between-default-or-named-args",
      "--no-spaces-around-equals",
      "--no-spaces-inside-brackets",
      "--no-spaces-inside-braces",
      "--no-spaces-inside-parentheses",
      "--no-spaces-around-colon",
      "--no-spaces-around-power-operator",
      "--no-spaces-around-bitwise-or-comma",
      "--no-spaces-around-arithmetic-operator",
      "--no-spaces-around-bitwise-operator",
      "--no-spaces-around-bitwise-and",
      "--no-spaces-around-logical-operator",
      "--no-spaces-around-subscript-colon",
      "--no-spaces-around-dot",
      "--no-spaces-around-starred-expression",
      "--no-spaces-around-type-annotations",
      "--no-spaces-around-named-expression",
      "--no-spaces-before-comment",
      "--no-spaces-in-square-bracket",
      "--no-spaces-in-parentheses",
      "--no-spaces-in-brackets",
      "--no-spaces-in-parentheses",
      "--no-spaces-in-braces",
      "--no-spaces-in-slice-brackets",
      "--no-spaces-in-type-brackets",
      "--no-split-penalty-after-parentheses",
      "--no-split-penalty-before-if",
      "--no-split-penalty-after-if",
      "--no-split-penalty-before-assignment",
      "--no-split-penalty-after-assignment",
      "--no-split-penalty-after-import",
      "--no-split-penalty-before-dot",
      "--no-split-penalty-before-or",
      "--no-split-penalty-before-and",
      "--no-split-penalty-after-and",
      "--no-split-penalty-before-logical-operator",
      "--no-split-penalty-after-logical-operator",
      "--no-split-penalty-before-arithmetic-operator",
      "--no-split-penalty-after-arithmetic-operator",
      "--no-split-penalty-before-bitwise-operator",
      "--no-split-penalty-after-bitwise-operator",
      "--no-split-penalty-before-conditional-operator",
      "--no-split-penalty-after-conditional-operator",
      "--no-split-penalty-before-attribute",
      "--no-split-penalty-after-attribute",
      "--no-split-penalty-before-named-expression",
      "--no-split-penalty-before-unary-operator",
      "--no-split-penalty-after-unary-operator",
      "--no-split-penalty-before-subscript-bracket",
      "--no-split-penalty-after-subscript-bracket",
      "--no-split-penalty-before-comma",
      "--no-split-penalty-after-comma",
      "--no-split-penalty-before-semicolon",
      "--no-split-penalty-after-semicolon",
      "--no-split-penalty-before-type-comment",
      "--no-split-penalty-after-type-comment",
      "--no-brace-on-new-line",
      "--no-same-line-conditional",
      "--no-same-line-definition",
      "--no-same-line-import",
      "--no-same-line-assignment",
      "--no-space-after-keyword",
      "--no-space-after-cast",
      "--no-space-after-module",
      "--no-space-before-module",
      "--no-blank-lines-after-imports",
      "--no-blank-lines-after-functions",
      "--no-blank-lines-after-class",
      "--no-blank-lines-around-class-body",
      "--no-blank-lines-around-top-level-defs",
      "--no-blank-lines-around-type",
      "--no-blank-lines-between-functions"
    ],


  
}

